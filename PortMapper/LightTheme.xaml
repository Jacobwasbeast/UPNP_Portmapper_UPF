<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Light Theme Colors -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#000000"/> <!-- Black -->
    <SolidColorBrush x:Key="SecondaryBrush" Color="#848484"/> <!-- Gray -->
    <SolidColorBrush x:Key="AccentBrush" Color="#6200EE"/> <!-- Purple -->
    <SolidColorBrush x:Key="ErrorBrush" Color="#B00020"/> <!-- Red -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FFFFFF"/> <!-- White background -->
    <SolidColorBrush x:Key="ButtonBrush" Color="#3700B3"/> <!-- Dark Purple -->
    <SolidColorBrush x:Key="FooterBackgroundBrush" Color="#3700B3"/> <!-- Dark Purple -->
    <SolidColorBrush x:Key="RowSeparatorBrush" Color="#CCCCCC"/> <!-- Light gray for row separators -->

</ResourceDictionary>