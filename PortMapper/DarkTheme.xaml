<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dark Theme Colors -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#E0E0E0"/> <!-- Light gray -->
    <SolidColorBrush x:Key="SecondaryBrush" Color="#3C3F41"/> <!-- Dark gray -->
    <SolidColorBrush x:Key="AccentBrush" Color="#00ACC1"/> <!-- Cyan -->
    <SolidColorBrush x:Key="ErrorBrush" Color="#E53935"/> <!-- Red -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#2C2C2C"/> <!-- Dark background -->
    <SolidColorBrush x:Key="ButtonBrush" Color="#1E88E5"/> <!-- Blue -->
    <SolidColorBrush x:Key="FooterBackgroundBrush" Color="#1E88E5"/> <!-- Blue -->
    <SolidColorBrush x:Key="RowSeparatorBrush" Color="#4A4A4A"/> <!-- Dark gray for row separators -->

</ResourceDictionary>